// Shareable config for markdownlint-cli2.
{
  "config": {
    // Make rule consistent with defaults for the VSCode Extension.
    "line-length": false
  },
  // Needs to be ignored with --no-globs if passing file paths directly.
  "globs": [
    "**/*.md"
  ],
  "ignores": [
    "node_modules"
  ]
}
